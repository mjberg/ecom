<div class="card">

<article>

<% if notice %>
  <aside id="notice"><%= notice %></aside>
  <% end %>

  <h4>Your Cart</h4>
<table>
    <% @cart.line_items.each do |line_item| %>
    <%= render(cart.line_items) %>
    <% end %>
    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"><%= number_to_currency(cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>
  <div class="actions">
<%= button_to 'Empty Cart', cart, method: :delete,
      data: { confirm: 'wAre you sure?' } %>

<%= button_to 'Checkout', checkout_create_path, method: :post, class: "checkout", params: { :cart_id => cart.id }, remote: true %>
</div>
  </article>
</div>
