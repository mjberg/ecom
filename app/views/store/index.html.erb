<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<div class="container">

  <h1 class="title">Welcome to My Store</h1>

  <ul class="catalog">
    <% @products.each do |product| %>
    <li>
    <%= image_tag(product.image_url) %>
  <h2><%= product.title %></h2>
    <p>
    <%= sanitize(product.description) %>
  </p>
<div class="price">
  <%= number_to_currency(product.price) %>
  </div>
</li>
<% end %>
  </ul>
</div>
